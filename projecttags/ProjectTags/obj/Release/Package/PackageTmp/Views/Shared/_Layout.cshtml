@{ 
    var rank = ViewBag.Rank;
    string url = ViewBag.Url;
    if (!string.IsNullOrEmpty(url))
    {
        url = url.ToLower();
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Projet Tags</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .pagination {
            margin: 0;
            margin-top: -5px;
            float: left;
        }
        .pagination a {
            cursor:pointer;
        }
        .record-count{
            padding: 10px;
        }
        .list-group-item-text {
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ProjectTags", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(url.StartsWith("/tasks") ? "active" : "")">
                        @Html.ActionLink("我的任务", "Index", "Tasks", new { area = "", stateID = 2 }, new { @class = "" })
                    </li>
                    <li class="@(url.StartsWith("/projects") ? "active" : "")">
                        @Html.ActionLink("项目", "Index", "Projects", new { area = "" }, new { @class = "" })
                    </li>
                    @if (rank == 2)
                    {
                        <li class="@(url.StartsWith("/users") ? "active" : "")">
                            @Html.ActionLink("用户", "Index", "Users", new { area = "" }, new { @class = "" })
                        </li>
                        <li class="@(url.StartsWith("/status") ? "active" : "")">
                            @Html.ActionLink("状态", "Index", "Status", new { area = "" }, new { @class = "" })
                        </li>
                    }
                    <li class="@(url.StartsWith("/teams") ? "active" : "" )">
                        @Html.ActionLink("团队", "Index", "Teams", new { area = "" }, new { @class = "" })
                    </li>
                    <li class="@(url.StartsWith("/weeks") ? "active" : "" )">
                        @Html.ActionLink("我的周报", "Index", "Weeks", new { area = "" }, new { @class = "" })
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@ViewBag.UserName <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("个人中心", "Details", "Users", new { area = "" }, new { @class = "" })</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("退出", "Logout", "Login", new { area = "" }, new { @class = "" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br />
        @RenderBody()
        <div class="clearfix"></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="http://shenjie.engineer" target="_blank">沈大侠</a></p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>