@model ProjectTags.Models.Tasks

@{
    ViewBag.Title = Html.DisplayFor(model => model.Name);
    long? userID = ViewBag.UserID;
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="label label-success">@Html.DisplayFor(model => model.Project.Name)</span>
            @Html.DisplayFor(model => model.Name)
        </h3>
    </div>
    <div class="panel-body">
	<p style="color:#d9534f;font-size:12px;">
	    <label>计划开发时间：</label>
            <span>@(Model.PlanStart.HasValue?Model.PlanStart.Value.ToString("yyyy-MM-dd"):"")</span>
            <span>~</span>
            <span>@(Model.PlanEnd.HasValue?Model.PlanEnd.Value.ToString("yyyy-MM-dd"):"")</span>
        </p>
        @Html.Raw(Model.Desc)
    </div>
    <div class="panel-footer">
        <label>创建时间：</label>
        <span>@Html.DisplayFor(model => model.CreateTime)</span>
        <label>创建人：</label>
        <span>@Html.DisplayFor(model => model.Create.UserName)</span>
        <span class="pull-right">
            @if (Model.CreateID == userID)
            {
                @Html.ActionLink("编辑", "Edit", new { id = Model.ID })<span> | </span>
                @Html.ActionLink("删除", "Delete", new { id = Model.ID })
            }
        </span>
    </div>
</div>

@Html.Action("Index", "Processes",new { taskID = Model.ID})

